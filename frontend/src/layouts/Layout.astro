---
import { getBackgroundImage } from '../components/BackgroundImage/getBackgroundImage';
import Logo from '../components/Logo.astro';
import SchibstedTelemetry from '../components/SchibstedTelemetry/SchibstedTelemetry.astro';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;

const disableTelemetry = import.meta.env.DISABLE_TELEMETRY === 'true';

const image = await getBackgroundImage();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {!disableTelemetry && <SchibstedTelemetry />}
  </head>
  <body
    style={{
      "--accent-color": image.accentColor,
      "--background-url": `url(${image.src})`,
    }}
  >
    <header>
      <Logo />
    </header>
    <slot />
    <footer>
      <p class="image-credit">Image: {image.author} / {image.origin}</p>
      {!disableTelemetry && <div id="data-controller" />}
    </footer>
  </body>
</html>

<style>
  header {
    padding: 32px;
  }

  .image-credit {
    font-size: 1rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.7);
    writing-mode: vertical-rl;
    transform: rotate(-180deg);
    position: fixed;
    right: 12px;
    white-space: nowrap;
  }
</style>

<style is:global>
  /* CSS reset from https://www.joshwcomeau.com/css/custom-css-reset/ */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  * {
    margin: 0;
  }

  body {
    min-height: 100dvh;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;

    /* Font styling */
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;

    /* Background styling */
    background-color: var(--accent-color);
    background-image: var(--background-url);
    background-blend-mode: normal;
    background-size: cover;
    background-position: center;
  }

  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
  }

  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }

  p {
    text-wrap: pretty;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    text-wrap: balance;
  }
</style>
