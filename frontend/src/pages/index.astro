---
import TimeSaved from '../components/TimeSaved.astro';
import UploadCard from '../components/UploadCard/UploadCard.astro';
import UploadDialog from '../components/UploadDialog/UploadDialog.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Get Started - JoJo"
  description="Use the power of AI to transribe your audio files into text."
>
  <main>
    <aside>
      <TimeSaved server:defer>
        <TimeSaved slot="fallback" isFallback={true} />
      </TimeSaved>
    </aside>

    <section class="upload-card">
      <UploadCard />
    </section>
  </main>

  <UploadDialog />
</Layout>

<style>
  aside {
    display: none;
    align-items: center;
    justify-content: center;

    margin-top: 10dvh;
  }

  .upload-card {
    position: absolute;
    bottom: 0;
  }

  aside {
    display: none;
  }

  @media (min-width: 480px) {
    .upload-card {
      margin: 0 32px;
      bottom: 16px;
      
      > form {
        border-radius: 8px;
      }
    }

    aside {
      display: flex;
    }
  }
</style>
